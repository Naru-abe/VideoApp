<div class="container">
  <div class="row my-5">
    <% if @video.video.attached? %>
      <div class="card col-md-10 p-0 mb-2">
        <video src=<%= rails_blob_path(@video.video) %> type="video/mp4" controls allowfullscreen></video>
        <div class="card-body">
          <h5 class="card-title"><%= @video.title %></h5>
          <p class="card-text"><%= @video.content %></p>
          <!--<div class="col-2 text-center">-->
            <%#= image_tag post.end_user.get_profile_image, size: '50x50', class: "img-fluid" %>
          <!--</div>-->
          <!--<div class="col-7 col-md-4">-->
            <%#= link_to user_path(video.user), {class: "text-secondary"} do %>
              <%= @video.user.name %>
            <%# end %>
          <!--</div>-->
        <% if @video.user_id == current_user.id %>
          <%= link_to "編集", edit_video_path(@video), class: "btn btn-outline-secondary" %>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
