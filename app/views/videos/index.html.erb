<div class="container">
  <div class="row my-5">
    <% @videos.each do |video| %>
      <div class="card col-md-4 p-0 mb-2">
        <video src=<%= rails_blob_path(video.video) %> type="video/mov" controls allowfullscreen></video>
        <div class="card-body">
          <h5 class="card-title"><%= video.title %></h5>
          <p class="card-text"><%= video.content %></p>
          <!--<div class="col-2 text-center">-->
            <%#= image_tag post.end_user.get_profile_image, size: '50x50', class: "img-fluid" %>
          <!--</div>-->
          <!--<div class="col-7 col-md-4">-->
            <%#= link_to user_path(video.user), {class: "text-secondary"} do %>
              <%= video.user.name %>
            <%# end %>
          <!--</div>-->
          <%= link_to "more", video_path(video), class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
